<?xml version="1.0" encoding="UTF-8"?>
<root label="Email SMTP" active="true">
  <field>
    <id>smtpServer</id>
    <label>Máy chủ mail</label>
    <type>string</type>
    <placeholder>vd: smtp.tamviettech.vn</placeholder>
    <value>tét</value>
  </field>
  <field>
    <id>smtpFrom</id>
    <label>Địa chỉ gửi</label>
    <type>string</type>
    <placeholder>vd: demo@tamviettech.vn</placeholder>
    <value>té</value>
  </field>
  <field>
    <id>smtpUser</id>
    <label>Tài khoản</label>
    <type>string</type>
    <placeholder>vd: demo@tamviettech.vn</placeholder>
    <value>dff&lt;?</value>
  </field>
  <field>
    <id>smtpPassword</id>
    <label>Mật khẩu</label>
    <type>password</type>
    <placeholder/>
    <value/>
  </field>
  <field>
    <id>smtpTsl</id>
    <label>Sử dụng TSL</label>
    <type>boolean</type>
    <value>true</value>
  </field>
  <field>
    <id>smtpPort</id>
    <label>Cổng</label>
    <type>string</type>
    <placeholder>587 hoặc 25</placeholder>
    <value>sdfff</value>
  </field>
  <field>
    <id>smtpText</id>
    <label>Textarea</label>
    <type>text</type>
    <placeholder>textarea input</placeholder>
    <value>es</value>
  </field>
  <field>
    <id>smtpSelect</id>
    <label>Select</label>
    <type>select</type>
    <value>red</value>
    <options>
      <option value="red">red</option>
      <option value="green">green</option>
      <option value="blue">blue</option>
    </options>
  </field>
</root>
